#content-head
  span.room-name Welcome to the lobby. Please chat and find a game.
  p.account-details Logged in as #{username} (#{real_name} <a href="/logout">logout</a>)

#content-body
  div(id='chat-#{room_name}')
    .chat-box
      ul

#content-foot
  .input
    form(id='form-#{room_name}')
      input.entry(name='message', id='message-entry')
      submit

script
  cc = new ChatController();
  cc.init();

  cc.chat.attach('#{room_name}');
  cc.chat.processEvents(!{events});

  cc.userList = new UserList('#left-sidebar');
  cc.userList.initUsers(!{users});
